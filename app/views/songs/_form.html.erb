<h4>Add new song here</h4>
<%= form_for [@artist, @artist.songs.new] do |f| %>
<label>Track</label>
    <%= f.text_field :track, placeholder: "Listing name", class: "form-control" %>
<br>
<label>Lyrics</label>
    <%= f.text_area :lyrics, row: 5, placeholder: "Put lyrics here", class: "form-control" %>
<br>
<label>Album</label>
    <%= f.text_field :album, placeholder: "Album name", class: "form-control" %>
<br>
<br>
<%= f.submit "Add now" %>
<% end %>
